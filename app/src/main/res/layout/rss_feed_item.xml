<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Rss Imagen -->
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/rss_img"
        android:layout_width="@dimen/item_list_image_width"
        android:layout_height="@dimen/item_list_image_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/orange"
        android:src="@drawable/rss">

    </androidx.constraintlayout.utils.widget.ImageFilterView>

    <!-- Rss name -->
    <TextView
        android:id="@+id/rss_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Nombre"
        android:layout_marginStart="@dimen/item_list_rss_name_margin_start"
        android:layout_marginTop="@dimen/item_list_rss_name_margin_top"
        app:layout_constraintStart_toEndOf="@id/rss_img"
        app:layout_constraintTop_toTopOf="@id/rss_img">
    </TextView>

    <!-- Rss description -->
    <TextView
        android:id="@+id/rss_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_list_rss_description_margin_top"
        tools:text="Esto es una descripciÃ³n muy larga del rss que desborda el contenido"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/rss_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rss_name">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>